
<section id="about">
    <h2>About Myself</h2>
    <div class="about-container">
        @if (aboutme is null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <p class="large">@aboutme.Description</p>

            <hr />
            <ul class="skills-list">
                @foreach (var skill in aboutme.Skills)
                {
                    <li key="@skill">@skill</li>
                }
            </ul>

            <hr />
            <p class="detail-or-quote">@aboutme.DetailOrQuote</p>
            <div style="text-align: center; margin-top: var(--spacing-lg);">
                <a href="pdfs/MahamadSardarResume.pdf" download="MahamadSardarResume.pdf" class="resume-button">Download Resume</a>
            </div>
        }
    </div>
</section>

@code {
    [Parameter, EditorRequired]
    public required HttpClient Http { get; set; }

    [Parameter, EditorRequired]
    public required HeroImageService HeroImageService { get; set; }

    private AboutMe? aboutme;
    private HeroImage? hero;

    protected override async Task OnInitializedAsync()
    {
        aboutme = await Http.GetFromJsonAsync<AboutMe>("sample-data/aboutme.json");
        hero = await HeroImageService.GetHeroAsync(img => img.Name is "about");
    }
}
